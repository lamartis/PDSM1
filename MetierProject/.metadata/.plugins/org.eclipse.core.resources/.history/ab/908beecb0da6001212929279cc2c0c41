package com.outils;

import java.util.HashMap;
import java.util.Map;

import com.generatedClasses.presentation.User;

public class ConnectedUsers {
	private static ConnectedUsers instance;
	private static Map<String, User> usersMap = new HashMap<String, User>();

	public static synchronized ConnectedUsers getInstance() {
		if (null == instance) { 
			if (null == instance) {
				instance = new ConnectedUsers();
			}
		}
		return instance;
	}

	private ConnectedUsers() {
	}

	public static synchronized User get(String identifiant) {
		return usersMap.get(identifiant);
	}

	public static synchronized void add(String identifiant, User user) {
		usersMap.put(identifiant, user);
	}
	
	public static synchronized void remove(String identifiant){
		usersMap.remove(identifiant);
	}

}
